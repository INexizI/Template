title
  | Edit

section
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = f.error_notification

    .profile
      header.head
        = link_to image_tag("/images/icon/arrow-left.svg"), @user
        p#b
          | back to profileÂ 
      .p-edit
        .headline
          |
        .form
          .form-inputs#profile-setting
            .edit-left
              = f.label :email
              br
              = f.text_field :email, disabled: "disabled"
              br
              br
              = f.label :username
              br
              = f.text_field :username, required: true, input_html: { autocomplete: "username" }
              br
              br
              = f.label :realname
              br
              = f.text_field :realname, required: true, input_html: { autocomplete: "realname" }
              br
              br
              = f.label :birthday
              br
              = f.date_field :birthday, required: true, input_html: { autocomplete: "birthday" }
              br
              br
              = f.label :password
              br
              = f.password_field :password, hint: "leave it blank if you don't want to change it", required: false, input_html: { autocomplete: "new-password" }
              br
              br
              = f.label :password_confirmation
              br
              = f.password_field :password_confirmation, required: false, input_html: { autocomplete: "new-password" }
              br
              br
              = f.label :current_password
              br
              = f.password_field :current_password, required: true, input_html: { autocomplete: "current_password" }
              br
              br
            .edit-right
              = f.label :image
              br
              = f.file_field :image
              br
              br
              = image_tag @user.image.url
              br
              = f.hidden_field :image_cache
              br
              br
              = f.label :about
              br
              = f.text_area :about, input_html: { autocomplete: "about" }
              br
          .form-actions
            p.left-btn
              = f.button :button
                = link_to 'Back', :back
            p.right-btn
              = f.button :button, "Update", type: :submit, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Updating..."}
